{
    "name": "changelog-generator",
    "version": "1.0.0",
    "author": "Daniel Acquesta <dgacquesta@gmail.com>",
    "homepage": "https://changelog-generator-pi.vercel.app/",
    "description": "Generate changelogs from the git history of public repos",
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@types/node": "^16.18.126",
        "@types/react": "^19.1.6",
        "@types/react-dom": "^19.1.5",
        "next": "^15.3.3",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-markdown": "^10.1.0",
        "react-scripts": "5.0.1",
        "typescript": "^4.9.5"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "backend": "node backend/index.js",
        "full-dev": "concurrently \"npm run dev\" \"npm run backend\"",
        "reset-db": "npx prisma migrate reset --schema=backend/prisma/schema.prisma"
    },
    "eslintConfig": {
        "extends": [
            "react-app"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
